<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pen"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.proprog.eassignment.AssignmentInfoActivity">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:alpha="0.8"
        android:background="#FFF"
        android:gravity="center">

        <EditText
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:hint="please provide a name for it"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:alpha="0.8"
        android:background="#FFF"
        android:gravity="center">

        <EditText
            android:id="@+id/inst"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:hint="give a simple instructions"
            android:textColor="#000" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:alpha="0.8"
        android:background="#FFF"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="start in dd-MM-yyyy"
            android:inputType="date"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:alpha="0.8"
        android:background="#FFF"
        android:gravity="center"
        android:orientation="vertical">


        <EditText
            android:id="@+id/end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="end in dd-MM-yyyy"
            android:inputType="date"
            android:textColor="#000" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:layout_margin="15dp">

        <Button
            android:id="@+id/bt_upload"
            style="?android:textAppearanceLarge"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight="0.6"
            android:background="#44AABB"
            android:text="Upload File"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_submit"
            style="?android:textAppearanceLarge"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight="0.6"
            android:background="#44AABB"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>
