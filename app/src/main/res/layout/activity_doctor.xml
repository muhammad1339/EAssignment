<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pen"
    android:orientation="vertical"
    android:paddingTop="25dp"
    tools:context="com.proprog.eassignment.DoctorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/doctor_info"
            android:layout_width="120dp"
            android:src="@drawable/scientist"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:onClick="view_doctor_data" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <ListView
            android:id="@+id/doctor_course_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:background="#F5F8F0" />
    </LinearLayout>

    <Button
        android:id="@+id/add_course"
        style="?android:textAppearanceLarge"
        android:layout_width="200dp"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:background="#44AABB"
        android:gravity="center"
        android:text="Add Course"
        android:textColor="#FFF"
        android:textStyle="bold" />
</LinearLayout>
